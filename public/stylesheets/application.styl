@import "whitespace-reset.css"
@import "mixins"
@import "header"
@import "board_top"
@import "list"
@import "edit_card"
@import "board_menu"
@import "popups"

html, input
  font: 14px "Helvetica Neue", Arial, Helvetica,sans-serif
  background: colors.primary.bg
  color: colors.primary.default
  overflow-y: hidden

body, html, #surface
  height: 100%

body, html, input, select, textarea
  color: colors.secondary.color
  line-height: 18px

input
  border: none
a
  cursor: pointer

h1
  font-size: 18px
  font-weight: bold

h3
  font-weight: bold

div
  border-radius: 4px

#surface
  display: flex
  -webkit-box-orient: vertical
  -webkit-box-direction: normal
  flex-direction: column
  height: 100%

.invisible
  display: none

.list
  display: inline-block
  margin-left: 10px
  vertical-align: top

.modal
  position: relative
  border-radius: 3px
  bottom: 0
  z-index: 25

#full_board
  height: 100vh

#board_canvas
  position: absolute
  top: 0
  right: 0
  bottom: 0
  left: 0
  display: flex
  margin-bottom: 10px
  overflow-x: auto
  overflow-y: hidden
  padding-bottom: 10px

#board
  flex-grow: 1
  position: relative
  -webkit-box-flex: 1

.icon-ellipses
  float: right
  font-weight: normal

span.label_green
  background: colors.labels.green
span.label_yellow
  background: colors.labels.yellow
span.label_orange
  background: colors.labels.orange
span.label_red
  background: colors.labels.red
span.label_purple
  background: colors.labels.purple
span.label_blue
  background: colors.labels.blue
span.label_teal
  background: colors.labels.teal
span.label_lime
  background: colors.labels.lime
span.label_pink
  background: colors.labels.pink    
span.label_black
  background: colors.labels.black
span.label_none
  background: colors.labels.none

.wrapper
  background: colors.secondary.bg
  color: colors.secondary.color
  .interior
    background: colors.primary.default

a.menu_button
  div
    background: colors.primary.default
    border: 1px solid colors.secondary.detail    
    &:hover
      background: #298FCA
      border-color: #298FEE #298FCA #026AA7

.window-overlay
  -webkit-box-align: start
  align-items: flex-start
  background-color: rgba(0,0,0,0.6)
  display: flex
  height: 100%
  -webkit-box-pack: center
  justify-content: center
  left: 0
  overflow-y: auto
  position: fixed
  top: 0
  width: 100%
  z-index: 20

.window-overlay.invisible
  display: none

textarea
  transition: background 85ms ease-in,border-color 85ms ease-in
  -webkit-transition: background 85ms ease-in,border-color 85ms ease-in
  border-radius: 3px

.board-wrapper
  position: absolute
  left: 0
  right: 0
  top: 0
  bottom: 0  

.board-main-content
  height: 100%
  display: flex
  flex-direction: column
  margin-right: 0
  transition: margin .1s ease-in
  -webkit-box-direction: normal
  -webkit-box-orient: vertical

#content
  -webkit-box-flex: 1
  flex-grow: 1

#content, body
  position: relative
  overflow-y: auto

input
  &:focus
    background: colors.primary.default  

