colors = {
  primary: {
    bg: rgb(0, 121, 191)
    dark_bg: rgba(0,0,0,.15)
    light_bg: rgba(255,255,255,.3)
    default: #fff
    darkest: rgba(255,255,255,.7)
    secondary: rgba(255,255,255,.3)
  },
  secondary: {
    bg: #E2E4E6
    color: #4d4d4d
    secondary_color: #8c8c8c
    detail: #E2E4E6
    secondary_detail: #CDD2D4
  },
  labels: {
    green: #61BD4F
    yellow: #F2D600
    orange: #FFAB4A
    red: #EB5A46
    purple: #C377E0
    blue: #0079BF
    teal: #00C2E0
    lime: #51E898
    pink: #FF80CE
    black: #4d4d4d
    none: #B6BBBF
  }
}

top_fixed()
  position: fixed
  top: 0
  left: 0
  right: 0

menu_button()
  background: linear-gradient(to bottom,#fff 0,#F8F9F9 100%)
  border: 1px solid colors.secondary.detail
  border-bottom-color: colors.secondary.secondary_detail
  font-weight: bold
  margin-top: 6px
  width: 124px
  height: 18px
  padding: 7px 

menu_button_hover()
  cursor: pointer
  color: colors.primary.default    
  border-color: #298FCA #298FCA #026AA7
  background: #298FCA

button()
  display: inline-block
  line-height: 22px
  padding: 7px 20px  

submit_button_inactive()
  background: colors.secondary.bg
  color: colors.secondary.secondary_color

standard_text_input()
  background: colors.primary.default
  color: colors.secondary.color
  font-weight: bold
  border-radius: 3px

list_item()
  background: colors.primary.default
  padding: 6px 6px 2px 8px
  margin: 8px
  border-radius: 4px
  text-decoration: none

menu_popup_wrapper()
  width: 300px
  margin: 0 auto
  background: colors.primary.default
  border-bottom-color: #C4C9CC
  border: 1px solid #D6DADC
  overflow: hidden

textarea_subtle()
  background: rgba(0,0,0,.03)
  border-color: rgba(0,0,0,.15)
  box-shadow: inset 0 1px 6px rgba(0,0,0,.1)
  margin-bottom: 4px
  outline: none
  padding: 7px
  box-sizing: border-box
  font-size: 14px