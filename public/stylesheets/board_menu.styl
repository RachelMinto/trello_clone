div#board_menu_wrapper.invisible
  display: none

div#board_menu_wrapper
  transition-property: transform, width
  transition-timing-function: ease-in
  transform: translateX(0)
  width: 340px
  position: absolute
  top: 0
  left: auto
  right: 0
  bottom: 0
  border-radius: 0px
  transition-duration: .1s
  .activity
    border-bottom: 1px solid #E2E4E6
    padding: 10px 0
  hr
    height: 1px
    background: #D6DADC
    margin: 12px 0

.board-wrapper.menu-shown
  margin-right: 340px
  transform: translateX(0)

#open_board_menu.invisible
  display: none 

#board_menu
  display: flex
  flex-direction: column
  align-items: flex-start
  flex-wrap: nowrap
  -webkit-box-pack: start
  justify-content: flex-start
  overflow: hidden
  position: absolute
  top: 0
  right: 0
  bottom: 0
  width: 340px

.side_menu_activity
  box-sizing: border-box
  flex: 1 1 auto
  -webkit-box-flex: 1
  overflow-x: hidden
  overflow-y: auto
  padding: 12px 6px 12px 12px
  width: 100%

.board_menu_header
  box-sizing: border-box
  -webkit-box-flex: 0
  flex: 0 0 auto
  height: 46px
  padding: 0 6px 0 12px
  position: relative
  width: 100%
  h2
    line-height: 20px
    margin: 13px 30px 12px
    overflow: hidden
    text-align: center
    color: #4d4d4d
    font-size: 18px
    font-weight: bold
  i
    position: absolute
    top: 2px
    right: 6px 
    font-size: 24px
    color: #8c8c8c

.activities_header
  h3
    font-size: 16px
    margin-bottom: 20px
  hr
    background: #D6DADC
    border: 0
    height: 1px
  i.icon-activity
    font-size: 24px
    color: #8c8c8c
    margin-right: 15px

.timestamp
  color: #8c8c8c
  font-size: 10px

.all_activities
  margin-left: 50px    