<div class="move_card_popup card_menu_popup">
  <div class="card_menu_popup_header"><h5>Move Card</h5><i class="icon-cancel"></i></div>
  <hr>
    <div class="all_lists_dropdown_placeholder setting menu_button">
      <span class="label">List</span>
      <span class="value">{{list}}</span>
        <!-- <label>List</label> -->
      <select class="list_select_options" name="list_select_options">
        {{#lists}}
        <option value="{{id}}">{{title}}</option>
        {{/lists}}
      </select>
    </div>
    <div class="all_positions_dropdown_placeholder setting menu_button">
      <span class="label">Position</span>
      <span class="position_value">{{position}}</span>
<!--         <label>Position</label>   -->  
      <select class="position_select_options" name="position_select_options">
        {{#cards}}
        <option value="{{@index}}">{{inc @index}}</option>
        {{/cards}}
      </select>      
    </div>
    <div class="submit_info_button selected move_submission">
      Move
    </div>        
  </div>
</div>

